<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- サーブレットの定義 -->
    <servlet>
        <servlet-name>StudentListAction</servlet-name>
        <servlet-class>teacher.StudentListAction</servlet-class>
    </servlet>

    <!-- サーブレットマッピング -->
    <servlet-mapping>
        <servlet-name>StudentListAction</servlet-name>
        <url-pattern>/studentList</url-pattern>
    </servlet-mapping>

    <!-- サーブレットの定義 -->
    <servlet>
        <servlet-name>StudentRecordUpdateExecuteAction</servlet-name>
        <servlet-class>teacher.StudentRecordUpdateExecuteAction</servlet-class>
    </servlet>

    <!-- サーブレットマッピング -->
    <servlet-mapping>
        <servlet-name>StudentRecordUpdateExecuteAction</servlet-name>
        <url-pattern>/teacher/StudentRecordUpdateExecuteAction</url-pattern>
    </servlet-mapping>

    <!-- リソースリファレンスの設定（データソースの設定） -->
    <resource-ref>
        <description>MySQL DataSource</description>
        <res-ref-name>jdbc/MyDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>
